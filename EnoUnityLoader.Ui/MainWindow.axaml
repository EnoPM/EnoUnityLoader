<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:EnoUnityLoader.Ui.ViewModels"
        mc:Ignorable="d"
        x:Class="EnoUnityLoader.Ui.MainWindow"
        x:DataType="vm:MainViewModel"
        x:CompileBindings="True"
        WindowStartupLocation="CenterScreen"
        CanResize="False"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="-1"
        SystemDecorations="None"
        TransparencyLevelHint="Transparent"
        Background="Transparent"
        Height="500" Width="450"
        Title="EnoUnityLoader"
        Icon="{Binding AppIcon}"
        Topmost="True">

    <Window.Styles>
        <Style Selector="ProgressBar">
            <Setter Property="Height" Value="8"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Background" Value="#33FFFFFF"/>
            <Setter Property="Foreground" Value="#FF77FF"/>
        </Style>
        <Style Selector="ProgressBar /template/ Border#PART_Indicator">
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
    </Window.Styles>

    <Border Background="#E6202020" CornerRadius="12" BorderBrush="#444444" BorderThickness="1">
        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Image Grid.Row="0"
                   Source="{Binding LogoSource}"
                   Height="320"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Opacity="{Binding LogoOpacity}"/>

            <!-- Status -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <TextBlock Text="{Binding Stage}"
                           FontSize="18"
                           FontWeight="Medium"
                           Foreground="#CCCCCC"
                           HorizontalAlignment="Center"
                           IsVisible="{Binding Stage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                <TextBlock Text="{Binding Description}"
                           FontSize="14"
                           Foreground="#999999"
                           HorizontalAlignment="Center"
                           Margin="0,8,0,0"
                           TextWrapping="Wrap"
                           TextAlignment="Center"/>
            </StackPanel>

            <!-- Progress Bar -->
            <Grid Grid.Row="2" Margin="0,0,0,0">
                <ProgressBar Value="{Binding Progress}"
                             IsIndeterminate="{Binding IsIndeterminate}"
                             Maximum="100"/>
                <TextBlock Text="{Binding ProgressText}"
                           FontSize="12"
                           Foreground="#666666"
                           HorizontalAlignment="Right"
                           Margin="0,-20,0,0"/>
            </Grid>

            <!-- Footer Status -->
            <TextBlock Grid.Row="3"
                       Text="{Binding Status}"
                       FontSize="12"
                       Foreground="#666666"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0"/>
        </Grid>
    </Border>
</Window>
